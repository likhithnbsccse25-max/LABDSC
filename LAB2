#include <stdio.h>

int main() {
    int n, first = 0, second = 1, nextTerm, i;

    printf("Enter the number of terms: ");
    scanf("%d", &n);

    printf("Fibonacci Series: ");
    if (n <= 0) {
        printf("Please enter a positive number.\n");
    } else {
        for (i = 1; i <= n; ++i) {
            printf("%d", first);
            if (i < n) { 
                printf(", ");
            }
            nextTerm = first + second;
            first = second;
            second = nextTerm;
        }
        printf("\n");
    }

    return 0;
]
